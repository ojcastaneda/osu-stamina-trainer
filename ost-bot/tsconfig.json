{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"outDir": "build",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*.ts"]
}
